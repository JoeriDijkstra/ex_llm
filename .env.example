# ExLLM Environment Variables
# Copy this file to .env and add your API keys

# Anthropic (Claude)
ANTHROPIC_API_KEY=

# OpenAI (GPT, DALL-E, Whisper)
OPENAI_API_KEY=

# Google Gemini
GEMINI_API_KEY=

# Google OAuth2 (for Gemini advanced features)
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=

# Groq (Fast inference)
GROQ_API_KEY=

# Mistral AI
MISTRAL_API_KEY=

# OpenRouter (Multi-provider gateway)
OPENROUTER_API_KEY=

# Perplexity (Web-aware AI)
PERPLEXITY_API_KEY=

# X.AI (Grok)
XAI_API_KEY=

# Local providers
OLLAMA_HOST=http://localhost:11434
LMSTUDIO_HOST=http://localhost:1234

